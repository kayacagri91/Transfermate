
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>Login | Todolist Panel</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="../dist/styles.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.13/css/all.css"
          crossorigin="anonymous">
    <style>
        .login {
            background: url('../dist/images/login-new.jpeg')
        }
    </style>
    <script src="https://code.jquery.com/jquery-3.0.0.js"></script>
    <script src="~/src/alljs.js"></script>
</head>
<body class="h-screen font-sans login bg-cover">
    <div class="container mx-auto h-full flex flex-1 justify-center items-center">
        <div class="w-full max-w-lg">
            <div class="leading-loose">
                <div class="max-w-xl m-4 p-10 bg-white rounded shadow-xl">
                    <p class="text-gray-800 font-medium text-center text-lg font-bold">Login Todolist Panel</p>
                    <div class="">
                        <label class="block text-sm text-gray-00" for="username">Username</label>
                        <input class="w-full px-5 py-1 text-gray-700 bg-gray-200 rounded" id="username" name="username" type="text" required="" placeholder="Please insert Username" aria-label="username">
                    </div>
                    <div class="mt-2">
                        <label class="block text-sm text-gray-600" for="password">Password</label>
                        <input class="w-full px-5  py-1 text-gray-700 bg-gray-200 rounded" id="password" name="password" type="password" placeholder="Please insert password" aria-label="password">
                    </div>
                    <div class="mt-4 items-center justify-between">
                        <button class="px-4 py-1 text-white font-light tracking-wider bg-gray-900 rounded" type="button" onclick="UserAuth()">Login</button>
                        <label id="Error-Label" class="label"></label>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
